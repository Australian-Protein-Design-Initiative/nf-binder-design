process {
    executor = 'hq'
    stageInMode = 'symlink'
    errorStrategy = 'retry'
    maxRetries = 3
    cache = 'lenient'

    withName: UNIQUE_ID {
        executor = 'local'
    }

    withName: GET_CONTIGS {
        executor = 'local'
    }

    withName: RENUMBER_RESIDUES {
        executor = 'local'
    }

    withName: FILTER_DESIGNS {
        executor = 'local'
    }

    withName: AF2IG_SCORE_FILTER {
        executor = 'local'
    }

    withName: COMBINE_SCORES {
        executor = 'local'
    }

    withName: RFDIFFUSION {
        clusterOptions = "--resource gpus/nvidia=1"
        accelerator = null
        time = 24.hours
        memory = '8g'
        cpus = 2
    }

    withName: RFDIFFUSION_PARTIAL {
        clusterOptions = "--resource gpus/nvidia=1"
        accelerator = null
        time = 24.hours
        memory = '2g'
        cpus = 2
    }

    withName: DL_BINDER_DESIGN_PROTEINMPNN {
        time = 30.minutes
        memory = '4g'
        cpus = 1
    }

    withName: AF2_INITIAL_GUESS {
        clusterOptions = "--resource gpus/nvidia=1"
        accelerator = null
        time = 30.minutes
        memory = '16g'
        cpus = 4
    }

    withName: CREATE_BOLTZ_YAML {
        executor = 'local'
    }

    withName: PARSE_BOLTZ_CONFIDENCE_JSON {
        executor = 'local'
    }

    withName: MMSEQS_COLABFOLDSEARCH {
        time = 4.hours
        memory = '32g'
        cpus = 8
    }

    withName: BOLTZ {
        clusterOptions = "--resource gpus/nvidia=1"
        accelerator = null
        time = 2.hours
        memory = '8g'
        cpus = 2
    }

    withName: 'BOLTZ_.*' {
        clusterOptions = "--resource gpus/nvidia=1"
        accelerator = null
        time = 2.hours
        memory = '8g'
        cpus = 2
    }

    withName: BINDCRAFT_CREATE_SETTINGS {
        executor = 'local'
    }

    withName: BINDCRAFT {
        accelerator = 1
        time = 2.hours
        memory = '16g'
        cpus = 2
        clusterOptions = "--resource gpus/nvidia=1"
    }
}

// Apptainer specific settings
apptainer {
    enabled = true
    autoMounts = true
    pullTimeout = 3.hours
    // --nv to enable NVIDIA GPU support
    runOptions = "--nv --cleanenv --env PYTHONNOUSERSITE=1 -B ${HOME} -B ${projectDir}/assets -B ${projectDir}/bin"
}

docker {
    enabled = false

    // --gpus all to enable NVIDIA GPU support
    runOptions = '--gpus all'
}
