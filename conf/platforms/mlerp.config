def random_choice(choices) {
    return choices[new Random().nextInt(choices.size())]
}

executor {
    $slurm {
        queueSize = 200
        pollInterval = '30 sec'
        queueStatInterval = '10m'
    }
}

process {
    executor = 'slurm'
    stageInMode = 'symlink'
    errorStrategy = 'retry'
    maxRetries = 1
    maxErrors = 20
    cache = 'lenient'

    withName: UNIQUE_ID {
        executor = 'local'
    }

    withName: GET_CONTIGS {
        //container = params.containers.get_contigs
        executor = 'local'
    }

    withName: RENUMBER_RESIDUES {
        //container = params.containers.renumber_residues
        executor = 'local'
    }

    withName: FILTER_DESIGNS {
        executor = 'local'
    }

    withName: AF2IG_SCORE_FILTER {
        executor = 'local'
    }

    withName: COMBINE_SCORES {
        //container = params.containers.combine_scores
        executor = 'local'
    }

    withName: RFDIFFUSION {
        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 24.hours

        // suitable for smaller targets
        // clusterOptions = '--gres=gpu:1 --partition=BigCats --qos=cheetah'

        // suitable for smaller targets
        // clusterOptions = '--gres=' + random_choice(['gpu:3g.20gb:1', 'gpu:3g.20gb:1']) + ' --partition=BigCats --qos=cheetah'
        // time = 30.minutes

        //container = params.containers.rfdiffusion
        accelerator = 1

        memory = '24g' // '8g' is probably enough
        cpus = 2
    }

    withName: RFDIFFUSION_PARTIAL {
        //container = params.containers.rfdiffusion
        accelerator = 1

        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 24.hours

        // suitable for smaller targets
        // clusterOptions = '--gres=gpu:1 --partition=BigCats --qos=cheetah'
        // time = 30.minutes

        memory = '8g' // '8g' is probably enough
        cpus = 2
    }

    withName: DL_BINDER_DESIGN_PROTEINMPNN {
        //container = params.containers.dl_binder_design_proteinmpnn

        // CPU only on MLeRP
        clusterOptions = '--partition=BigCats --qos=panther'
        time = 30.minutes

        // Since this is effectively CPU only and quick, we probably can also just
        // run it on the local node
        //executor = 'local'

        memory = '4g'
        cpus = 1
    }

    withName: AF2_INITIAL_GUESS {
        //container = params.containers.af2_initial_guess
        accelerator = 1

        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 24.hours

        // suitable for smaller targets
        //clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=lion'
        //time = 30.minutes

        memory = '16g'
        cpus = 4
    }

    withName: BINDCRAFT_CREATE_SETTINGS {
        executor = 'local'
    }
    withName: CREATE_BOLTZ_YAML {
        executor = 'local'
    }

    withName: PARSE_BOLTZ_CONFIDENCE_JSON {
        executor = 'local'
    }

    withName: MMSEQS_COLABFOLDSEARCH {
        clusterOptions = '--partition=BigCats --qos=panther'
        time = 4.hours
        memory = '64g'
        cpus = 16

    // Load index into RAM
    //ext.args = "--db-load-mode 2"
    }

    withName: BOLTZ {
        accelerator = 1
        cpus = 2

        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 1.hours

    // suitable for smaller targets
    //clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=lion'
    //time = 30.minutes
    }
    
    withName: BOLTZ_COMPARE_COMPLEX {
        accelerator = 1
        cpus = 2

        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 1.hours

        // suitable for smaller targets
        //clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=lion'
        //time = 30.minutes
    }

    withName: BOLTZ_COMPARE_BINDER_MONOMER {
        accelerator = 1
        cpus = 2

        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        time = 1.hours

        // suitable for smaller targets
        //clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=lion'
        //time = 30.minutes
    }

    withName: BINDCRAFT_CREATE_SETTINGS {
        executor = 'local'
    }

    withName: BINDCRAFT {
        accelerator = 1
        memory = { task.attempt <= 1 ? '16g' : '64g' }
        cpus = 2

        // typical targets, 40gb VRAM
        //clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
        //time = 2.hours

        // suitable for smaller targets, 20gb VRAM
        //clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=lion'
        //time = 30.minutes

        // Try using 20gb VRAM, use 40gb after first failure.
        // This is helpful for run where 20gb is usually enough, but a fraction of
        // binder lengths are too long for 20gb.
        clusterOptions = {
            task.attempt <= 1 ?
                '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah' :
                '--gres=gpu:1 --partition=BigCats --qos=lion'
        }
    }

    withName: BOLTZGEN_DESIGN {
        accelerator = 1
        time = 30.minutes
        memory = '16g'
        cpus = 2
        clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah'
    }

    withName: BOLTZGEN_INVERSE_FOLDING {
        accelerator = 1
        time = 30.minutes
        memory = '8g'
        cpus = 2
        clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah'
    }

    withName: BOLTZGEN_FOLDING {
        accelerator = 1
        time = 30.minutes
        memory = '16g'
        cpus = 2
        clusterOptions = { task.attempt <= 1 ? "--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah" : 
                                               '--gres=gpu:40gb:1 --partition=BigCats --qos=lion' }
    }

    withName: BOLTZGEN_DESIGN_FOLDING {
        accelerator = 1
        time = 30.minutes
        memory = '16g'
        cpus = 2
        clusterOptions = "--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah"
    }

    withName: BOLTZGEN_MERGE {
        executor = 'local'
        time = 30.minutes
        memory = '1g'
        cpus = 1
    }

    withName: BOLTZGEN_ANALYSIS {
        time = 12.hours
        memory = '64g'
        cpus = 8
        clusterOptions = '--gres=gpu:40gb:1 --partition=BigCats --qos=lion'
    }

    withName: BOLTZGEN_FILTERING {
        time = 30.minutes
        memory = '4g'
        cpus = 1
        clusterOptions = '--gres=gpu:3g.20gb:1 --partition=BigCats --qos=cheetah'
    }
}

// Apptainer specific settings
