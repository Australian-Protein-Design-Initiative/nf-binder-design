    enabled = true
    autoMounts = true
    pullTimeout = 3.hours
    // --nv to enable NVIDIA GPU support
    runOptions = "--nv --cleanenv --env PYTHONNOUSERSITE=1 -B \$HOME -B ${projectDir}/assets -B ${projectDir}/bin -B /mnt/userdata2 -B /mnt/userdata3 -B /mnt/userdata4"
